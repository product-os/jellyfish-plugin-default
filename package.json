    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "catch-uncommitted": "^2.0.0",
    "copyfiles": "^2.4.1",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.5.1",
    "ts-jest": "^27.0.4",
    "typed-errors": "^1.1.0",
    "typedoc": "^0.21.4",
    "typescript": "^4.3.5"
  },
