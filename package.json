{
  "name": "@balena/jellyfish-plugin-default",
  "version": "21.1.46",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-plugin-default.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Default Jellyfish Plugin",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json && copyup lib/cards/**/*.md build",
    "lint": "balena-lint lib test && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest,typedoc",
    "lint:fix": "balena-lint --fix lib test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest test/unit",
    "test:integration": "npx jest --runInBand --bail test/integration",
    "test:compose": "DOCKER_BUILDKIT=1 docker build -t balena/jellyfish-sut:latest --secret id=npmrc,src=.balena/secrets/npmrc.txt . && docker-compose -f docker-compose.test.yml -f docker-compose.yml up --exit-code-from=sut",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck",
    "compose": "docker-compose up"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-assert": "^1.1.68",
    "@balena/jellyfish-logger": "3.0.86",
    "@balena/jellyfish-plugin-base": "^2.1.244",
    "is-uuid": "^1.0.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.3",
    "@balena/jellyfish-action-library": "^15.1.8",
    "@balena/jellyfish-config": "^1.5.1",
    "@balena/jellyfish-core": "^6.2.0",
    "@balena/jellyfish-plugin-product-os": "^2.7.0",
    "@balena/jellyfish-sync": "^6.1.3",
    "@balena/jellyfish-test-harness": "^8.1.25",
    "@balena/jellyfish-types": "^1.2.0",
    "@balena/lint": "^6.1.1",
    "@types/bluebird": "^3.5.36",
    "@types/is-uuid": "^1.0.0",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.175",
    "bluebird": "^3.7.2",
    "catch-uncommitted": "^2.0.0",
    "copyfiles": "^2.4.1",
    "date-fns": "^2.25.0",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.6.1",
    "ts-jest": "^27.0.7",
    "typed-errors": "^1.1.0",
    "typedoc": "^0.22.6",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "@balena/jellyfish-action-library": "^15.1.8",
    "@balena/jellyfish-core": "^6.2.0",
