    "@balena/jellyfish-types": "^1.2.39",
    "@balena/lint": "^6.2.0",
    "@types/is-uuid": "^1.0.0",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.178",
    "catch-uncommitted": "^2.0.0",
    "copyfiles": "^2.4.1",
